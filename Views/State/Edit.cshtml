@model LiperFrontend.Models.State

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<!-------Aleart Notification------->

<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            @Html.Raw(@ViewBag.Alert)
        </div>
    </div>
</div>
<!------------------------------------------>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="nameEN" class="control-label"></label>
                <input asp-for="nameEN" class="form-control" />
                <span asp-validation-for="nameEN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="nameAR" class="control-label"></label>
                <input asp-for="nameAR" class="form-control" />
                <span asp-validation-for="nameAR" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="countryId" class="control-label"></label>
                <select asp-for="countryId" asp-items="@ViewBag.countriesSelectedList" class="form-control"></select>
                <span asp-validation-for="countryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-secondary">Back to States List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
