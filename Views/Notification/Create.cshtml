@model LiperFrontend.Models.Notification

@{
    ViewData["Title"] = "Create";
}
<h3>Send Notefications To Agents</h3>

<!-------Aleart Notification------->

<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            @Html.Raw(@ViewBag.Alert)
        </div>
    </div>
</div>
<!------------------------------------------>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="agent_customer_Phone" class="control-label"></label>
                <input asp-for="agent_customer_Phone" new { placeholder = "Pass the message for one Agent\ Empty for all" } class="form-control" />
                <span asp-validation-for="agent_customer_Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="text" class="control-label"></label>
                <input asp-for="text" class="form-control" />
                <span asp-validation-for="text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="description" class="control-label"></label>
                <input asp-for="description" class="form-control" />
                <span asp-validation-for="description" class="text-danger"></span>
            </div>
            @* <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="isRead" /> @Html.DisplayNameFor(model => model.isRead)
                </label>
            </div> *@
            <div class="form-group">
                <label asp-for="files"></label>
                <input asp-for="files" type="file">
                <span asp-validation-for="files"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Send" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-secondary">Back to Notifications List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
