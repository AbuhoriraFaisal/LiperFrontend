@model LiperFrontend.Models.Bank

@{
    ViewData["Title"] = "Edit";
}


<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            @Html.Raw(@ViewBag.Alert)
        </div>
    </div>
</div>

<h4>Update Bank</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="nameAR" class="control-label"></label>
                <input asp-for="nameAR" class="form-control" />
                <span asp-validation-for="nameAR" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="countryId" class="control-label"></label>
                <select asp-for="countryId" asp-items="@ViewBag.SelectedList" class="form-control"></select>
                <span asp-validation-for="countryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-secondary">Back to Banks List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
