@model Category

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="nameEN" class="control-label"></label>
                <input asp-for="nameEN" class="form-control" />
                <span asp-validation-for="nameEN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="nameAR" class="control-label"></label>
                <input asp-for="nameAR" class="form-control" />
                <span asp-validation-for="nameAR" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="files"></label>
                <input asp-for="files" type="file">
                <span asp-validation-for="files"></span>
            </div>
            
            <div class="form-group" style="padding-top:3%">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" asp-controller="Categories" class="btn btn-outline-secondary">Back to Categories List</a>

            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
