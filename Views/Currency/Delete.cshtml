        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nameEN)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.nameAR)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.nameAR)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.currencyCode)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.currencyCode)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.isActive)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.isActive)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.countryId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.countryId)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-outline-secondary">Back to Currencies List</a>
    </form>
</div>
