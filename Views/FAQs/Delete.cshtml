        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.text)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.textAR)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.textAR)
        </dd>
        <dt class = "col-sm-2">
