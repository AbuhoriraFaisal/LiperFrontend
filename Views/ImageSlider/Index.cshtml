@model IEnumerable<LiperFrontend.Models.ImageSlider>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped">
                            
                            <caption>Number of items: @Model.Count()</caption>
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.text)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.textAR)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.description)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.descriptionAR)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.imageURL)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.isActive)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.text)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.textAR)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.description)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.descriptionAR)
                                        </td>
                                        <td style="width:20%">
                                            <img src="@item.imageURL" style="width:50%" alt="Image" />
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.isActive)
                                        </td>
                                        <td>
                                            <a asp-action="Edit" class="btn btn-outline-info" asp-route-Id=@item.Id> Update</a>
                                            <a asp-action="Delete" class="btn btn-outline-danger" asp-route-Id=@item.Id> Delete</a>

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
