@model IEnumerable<LiperFrontend.Models.Notification>
@using LiperFrontend.Shared
@{
    ViewData["Title"] = "Index";
    Pager pager = new Pager();

    int pageNo = 0;

    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Send Customer Notification</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.text)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isRead)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.userTypeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.agent_customer_Phone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.text)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.isRead)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.userTypeId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.agent_customer_Phone)
                </td>
                <td>
                </td>
            </tr>
        }
    </tbody>
</table>
@Html.Partial("_PagerPartial" ,pager);