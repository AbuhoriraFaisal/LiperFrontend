@model IEnumerable<LiperFrontend.Models.Country>
@using LiperFrontend.Shared

@{
    ViewData["Title"] = "Index";
    Pager pager = new Pager();

    int pageNo = 0;

    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}

<h1>Index</h1>
<meta http-equiv="Content-Security-Policy" content="upgrade-insecure-requests" />
<p>
    <a asp-action="Create" class="btn btn-outline-success">New Country</a>
</p>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped">
                            @*<table id="example" class="table table-sm table-bordered table-hover">*@


                            <caption>Number of items: @Model.Count()</caption>

    <thead>
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.NameEN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NameAR)
            </th>
            <th style="width:20%">
                Image
            </th>
            <th>
                Code
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.NameEN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameAR)
            </td>
            
            <td style="width:20%">
                    <img src="@item.flagImgUrl" style="width:50%" alt="Country flag" />
            </td>
            <td>
                +@Html.DisplayFor(modelItem => item.CountryCode)
            </td>
                <td>
                    <a asp-action="Edit" class="btn btn-outline-info" asp-route-Id=@item.Id> Update</a>
                    <a asp-action="Delete" class="btn btn-outline-danger" asp-route-Id=@item.Id> Delete</a>

                </td>
        </tr>
}
    </tbody>
</table>

                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
@Html.Partial("_PagerPartial" ,pager)
